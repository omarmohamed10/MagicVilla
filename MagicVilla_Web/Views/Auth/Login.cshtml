@model MagicVilla_Web.Models.Dto.LoginRequestDTO


<form method="post">

    <div class="container border p-4">
        <div class="row text-center col-6 offset-3 pb-1">
            <h2 style="background-color:black" class="form-control">Login</h2>
        </div>

        <div class="text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input class="form-control" asp-for="UserName" type="text" placeholder="UserName..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input class="form-control" asp-for="Password" type="password" placeholder="Password..." />
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <button class="form-control btn-success" type="submit" value="Submit">Login</button>
            </div>
        </div>

    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}